<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    tools:context="com.example.vulan.survivalguideversion2.app.BaseActivity">

    <include
        android:id="@+id/toolbar"
        layout="@layout/toolbar" />

    <FrameLayout
        android:id="@+id/ads_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"></FrameLayout>

    <FrameLayout
        android:id="@+id/container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/ads_container"
        android:layout_below="@id/toolbar"></FrameLayout>

    <include
        android:id="@+id/fablisten"
        layout="@layout/fablisten" />

    <include
        android:id="@+id/floatButton"
        layout="@layout/fab"></include>


</RelativeLayout>
